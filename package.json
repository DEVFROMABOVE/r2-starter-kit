{
  "name": "r2-starter-kit",
  "version": "2.0.0",
  "description": "R^2 Starter Kit is an boilerplate for web development built on top of React, Redux and Webpack based on Node.js environment, also containing webpack loader such as react-hmr and babel 6.",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --host localhost --port 8080 --colors --hot --inline --config webpack.config.js  --history-api-fallback true",
    "build": "cross-env NODE_ENV=production webpack --colors --optimize-minimize --config webpack.config.js",
    "test": "cross-env NODE_ENV=test NODE_PATH=./src mocha --compilers js:babel-core/register 'test/**/*.test.jsx' --recursive --require 'test/setup.jsx'",
    "test:cov": "cross-env NODE_ENV=test NODE_PATH=./src babel-node -- ./node_modules/.bin/isparta cover -x 'dist/*.js' --include '**/*.js' --include '**/*.jsx' _mocha -- 'test/**/*.test.jsx' --recursive --require 'test/setup.jsx'",
    "server": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tpai/r2-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tpai/r2-starter-kit/issues"
  },
  "author": "tonypai <tony77794@gmail.com> (http://github.com/tpai)",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.3.3",
    "babel-core": "^6.7.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "es6-promise": "^3.1.2",
    "express": "^4.13.4",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.6.1",
    "node-sass": "^3.4.2",
    "postcss-import": "^8.0.2",
    "postcss-loader": "^0.8.2",
    "precss": "^1.4.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "redux": "^3.3.1",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.0.1",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-rewire": "^1.0.0-rc-1",
    "babel-polyfill": "^6.7.2",
    "deep-freeze": "0.0.1",
    "expect": "^1.15.2",
    "expect-jsx": "^2.4.0",
    "isparta": "^4.0.0",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "react-addons-test-utils": "^15.0.1",
    "react-transform-hmr": "^1.0.4",
    "redux-logger": "^2.6.1",
    "redux-mock-store": "^1.0.2",
    "webpack-dev-server": "^1.14.1"
  }
}
