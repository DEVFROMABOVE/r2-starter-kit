{
  "name": "r2-starter-kit",
  "version": "1.1.0",
  "description": "R^2 Starter Kit is an boilerplate for web development built on top of React, Redux and Webpack based on Node.js environment, also containing webpack loader such as react-hmre and babel 6.",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --host localhost --port 8080 --colors --hot --inline --config webpack.config.js",
    "build": "NODE_ENV=production webpack --colors --optimize-minimize --config webpack.config.js",
    "test": "NODE_ENV=test NODE_PATH=. mocha --reporter nyan --compilers js:babel-core/register --recursive 'test/**/*.test.jsx' --require test/setup.jsx",
    "kill": "taskkill /f /im node.exe",
    "server": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tpai/r2-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tpai/r2-starter-kit/issues"
  },
  "author": "tonypai <tony77794@gmail.com> (http://github.com/tpai)",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.2.3",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "css-loader": "^0.21.0",
    "es6-promise": "^3.0.2",
    "express": "^4.13.3",
    "history": "^1.13.1",
    "http": "0.0.0",
    "isomorphic-fetch": "^2.2.0",
    "lodash": "^3.10.1",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.0",
    "precss": "^1.4.0",
    "react": "^0.14.3",
    "react-addons-update": "^0.14.3",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.2",
    "redux": "^3.0.3",
    "redux-promise": "^0.5.0",
    "redux-thunk": "^1.0.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.2"
  },
  "devDependencies": {
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-rewire": "^0.1.22",
    "babel-preset-react-hmre": "^1.0.1",
    "deep-freeze": "0.0.1",
    "expect": "^1.13.0",
    "expect-jsx": "^2.1.3",
    "jsdom": "^7.0.2",
    "mocha": "^2.3.4",
    "nock": "^3.1.1",
    "react-addons-test-utils": "^0.14.3",
    "redbox-react": "^1.1.1",
    "redux-logger": "^2.3.1",
    "redux-mock-store": "0.0.2",
    "webpack-dev-server": "^1.12.1"
  }
}
