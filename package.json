{
  "name": "r2-starter-kit",
  "version": "1.0.0",
  "description": "R^2 Starter Kit is an boilerplate for web development built on top of React, Redux and Webpack based on Node.js environment, also containing webpack loader such as sass and babel.",
  "scripts": {
    "start": "webpack-dev-server --host localhost --port 8080 --colors --hot --inline --config webpack.config.dev.js",
    "build": "webpack --colors --optimize-minimize --config webpack.config.prod.js",
    "test": "NODE_ENV=test NODE_PATH=. mocha --compilers js:babel-core/register --recursive 'test/**/*.test.jsx' -w",
    "kill": "taskkill /f /im node.exe",
    "server": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tpai/r2-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tpai/r2-starter-kit/issues"
  },
  "author": "tonypai <tony77794@gmail.com> (http://github.com/tpai)",
  "license": "ISC",
  "dependencies": {
    "autoprefixer-loader": "^3.1.0",
    "babel-loader": "^5.3.2",
    "css-loader": "^0.21.0",
    "es6-promise": "^3.0.2",
    "expect": "^1.13.0",
    "express": "^4.13.3",
    "http": "0.0.0",
    "isomorphic-fetch": "^2.2.0",
    "nock": "^3.1.1",
    "react": "^0.14.3",
    "react-addons-update": "^0.14.3",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0-rc3",
    "redux": "^3.0.3",
    "redux-mock-store": "0.0.2",
    "redux-thunk": "^1.0.0",
    "sass-loader": "^3.0.0",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.2"
  },
  "devDependencies": {
    "babel-plugin-react-transform": "^1.1.1",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.1",
    "redbox-react": "^1.1.1",
    "redux-devtools": "^3.0.0-beta-3",
    "redux-devtools-dock-monitor": "^1.0.0-beta-3",
    "redux-devtools-log-monitor": "^1.0.0-beta-3",
    "webpack-dev-server": "^1.12.1"
  }
}
